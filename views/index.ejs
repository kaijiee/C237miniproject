<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="styles.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Event Management and Ticketing Platform</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Event Management and Ticketing app</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/addEvent">Add New Event</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/addTicket">Add New Ticket</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/addAttendee">Add New Attendee</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/viewTickets">View Tickets</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/viewAttendees">View Attendees</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  <div class="container">
    <br>
    <div class="text-center"><h2>Upcoming Events</h2></div>
    <br>
    <table class="table table-hover small text-center">
      <thead>
          <tr>
            <th width="150">Event ID</th>
            <th width="150">Event Name</th>
            <th width="150">Date</th>
            <th width="150">Venue</th>
            
            <th width="150">Speakers</th>
            <th width="100">Time</th>
            <th width="100">Cost</th>
            <th width="50">Edit</th>
            
          </tr>
      </thead>
      <tbody>
            <% events.forEach(event => { %>
              <tr>
                <td><%= event.ID %></td>
                <td><%= event.name %></td>
                <td><%= event.date %></td>
                <td><%= event.venue %></td>
                <td><%= event.speakers %></td>
                <td><%= event.time %></td>
                <td>$<%= parseFloat(event.cost).toFixed(2) %></td>
                <!--Edit link-->
                <td><a href="/editEvent/<%= event.ID %>">Edit</a></td>
                <!-- Delete Link -->
                 <td><a href="/deleteProduct/<%= event.ID %>" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a></td>
              </tr>
            <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>