<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>View Tickets</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Event Management and Ticketing app</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/addEvent">Add New Event</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/addTicket">Add New Ticket</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/addAttendee">Add New Attendee</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/viewTickets">View Tickets</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
        <h2 class="text-center">Tickets</h2>
        <table class="table table-hover text-center">
            <thead>
                <tr>
                    <th>Event ID</th>
                    <th>Price</th>
                    <th>Availability</th>
                </tr>
            </thead>
            <tbody>
                <% tickets.forEach(ticket => { %>
                    <tr>
                        <td><%= ticket.ID %></td>
                        <td>$<%= parseFloat(ticket.price).toFixed(2) %></td>
                        <td><%= ticket.Availablity %></td>
                      </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>